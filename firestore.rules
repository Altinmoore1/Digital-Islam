rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read for hero content (Landing Page)
    // Allow write only for authenticated users (Admin Panel)
    match /hero_content/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Volunteers and Donors
    // Allow PUBLIC creation (so users can sign up/donate)
    // Allow ADMIN read/write (for management)
    match /volunteers/{document=**} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    match /donors/{document=**} {
      allow create: if true;
      allow read, update, delete: if request.auth != null;
    }
    

    // Gallery
    // Public Read
    // Admin Write
    match /gallery/{document=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    // Projects
    // Public Read
    // Admin Write
    match /projects/{document=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }
    
    // Fallback
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
